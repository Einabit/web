    <p><%-data.content.index.p2%></p>
  </div>
  <img class="mobile-hidden w8rem" src="icons/SVG/icono-02.svg"/>
</section>
<section class="dflex jct-between vertical-space feature-icon">
  <div>
    <div class="dflex jct-between">
      <h2><%-data.content.index.header3%></h2>
      <img class="desktop-hidden w5rem" src="icons/SVG/icono-03.svg"/>
    </div>
    <p><%-data.content.index.p3%></p>
  </div>
  <img class="mobile-hidden w8rem" src="icons/SVG/icono-03.svg"/>
</section>
<section class="feature-wide gray bg-pattern-2 bg-right">
