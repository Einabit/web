<%#einaweb:require lang.json%>
<%#einaweb:each%>
<%#einaweb:name $lang-iot-as-service%>
<%-include("head.inc", data)%>
<section class="primary home bg-pattern-home">
  <div class="inner">
    <custom-home-header><%=data.content.head.mainHeader%></custom-home-header>
    <div class="dflex jct-center">
      <custom-cta onclick="location.href = 'mailto:info@einabit.com'"><%=data.content.head.cta%></custom-cta>
    </div>
  </div>
</section>
<section>
  <custom-highlight class="shadow border-radius" style="margin-top: -80px">
    <h2 class="txt-center"><%-data.content.index.mainHeader%></h2>
    <p class="txt-center"><%-data.content.index.mainSub%></p>
  </custom-highlight>
</section>
<% if (data.lang === "es") { %>
<section class="bg-pattern-2 bg-right" style="margin-top: 80px">
  <video controls poster="thumb/imagen-api.png">
     <source src="video/einabit-api.mp4" type="video/mp4">
  </video>
</section>
<% } %>
<section class="dflex jct-between vertical-space feature-icon">
  <div>
    <div class="dflex jct-between">
      <h2><%-data.content.index.header1%></h2>
      <img class="desktop-hidden w5rem" src="icons/SVG/icono-01.svg"/>
    </div>
    <p><%-data.content.index.p1%></p>
  </div>
  <img class="mobile-hidden w8rem" src="icons/SVG/icono-01.svg"/>
</section>
<section class="dflex jct-between vertical-space feature-icon">
